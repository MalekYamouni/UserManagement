<Window x:Class="UserManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="User Management System" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>

        <Button Grid.Row="1" Content="Filter" Width="120" Height="30" 
                HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#E0E0E0" BorderBrush="#BDBDBD" BorderThickness="1" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID" FontWeight="Bold" Padding="10,0,0,0" Width="50"/>
                        <TextBlock Text="First Name" FontWeight="Bold" Padding="10,0,0,0" Width="100"/>
                        <TextBlock Text="Last Name" FontWeight="Bold" Padding="10,0,0,0" Width="100"/>
                        <TextBlock Text="Email" FontWeight="Bold" Padding="10,0,0,0" Width="200"/>
                        <TextBlock Text="Status" FontWeight="Bold" Padding="10,0,0,0" Width="100"/>
                    </StackPanel>
                </Border>

                <ListBox Grid.Row="1" ItemsSource="{Binding UserCollection}" SelectedItem="{Binding SelectedUser}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Grid.Row="1" Orientation="Horizontal"  Margin="5">
                                <TextBlock Text="{Binding Id}" Padding="10,0,0,0" Width="50"/>
                                <TextBlock Text="{Binding FirstName}" Padding="10,0,0,0" Width="100"/>
                                <TextBlock Text="{Binding LastName}" Padding="10,0,0,0" Width="100"/>
                                <TextBlock Text="{Binding Email}" Padding="10,0,0,0" Width="200"/>
                                <TextBlock Text="{Binding Status}" Padding="10,0,0,0" Width="100"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            
            <StackPanel Grid.Column="1">
                <Button Content="Add New User" Margin="6 " Command="{Binding AddNewUserCommand, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="First Name" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding NewFirstName, UpdateSourceTrigger=PropertyChanged}" Margin="6"/>
                <TextBlock Text="Last Name" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding NewLastName, UpdateSourceTrigger=PropertyChanged}" Margin="6"/>
                <TextBlock Text="Email" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding NewEmail, UpdateSourceTrigger=PropertyChanged}" Margin="6"/>
                <Button Content="Active" Margin="6" Command="{Binding MarkAsActiveCommand, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Inactive" Margin="6" Command="{Binding MarkAsInactiveCommand, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Locked" Margin="6" Command="{Binding MarkAsLockedCommand, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
